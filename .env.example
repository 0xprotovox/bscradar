# ===========================================
# BscRadar Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# RPC PROVIDERS (at least one required)
# ===========================================
# Primary BSC RPC endpoint (Alchemy recommended for reliability)
BSC_RPC=https://bnb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Backup RPC endpoints (optional but recommended)
QUICKNODE_RPC=https://your-endpoint.quiknode.pro/YOUR_KEY
PUBLIC_RPC=https://bsc-dataseed.binance.org

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# CACHE SETTINGS (seconds)
# ===========================================
# Pool analysis cache TTL
CACHE_TTL=60

# Price data cache TTL (shorter for accuracy)
PRICE_CACHE_TTL=30

# ===========================================
# RATE LIMITING
# ===========================================
# Time window in milliseconds
RATE_LIMIT_WINDOW=60000

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING
# ===========================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/app.log
